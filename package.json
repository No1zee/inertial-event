{
    "name": "novastream",
    "version": "0.1.1",
    "private": true,
    "engines": {
        "node": "22.x"
    },
    "main": "electron/main.js",
        "build": {
            "appId": "com.novastream.app",
            "productName": "NovaStream",
            "directories": {
                "output": "dist"
            },
            "files": [
                "electron/**/*",
                "out/**/*",
                "assets/env.enc",
                "dist-server/**/*",
                "services/**/*",
                "!**/*.ts",
                "!**/*.tsx",
                "!**/*.map"
            ],
            "publish": [
                {
                    "provider": "generic",
                    "url": "https://inertial-event.vercel.app/updates"
                }
            ],
            "win": {
                "target": "nsis",
                "icon": "build/icon.png"
            },
            "nsis": {
                "oneClick": false,
                "allowToChangeInstallationDirectory": true,
                "allowElevation": true,
                "runAfterFinish": true,
                "createDesktopShortcut": "always",
                "createStartMenuShortcut": true,
                "shortcutName": "NovaStream",
                "include": "build/installer.nsh"
            }
        },
    "scripts": {
        "dev": "cross-env PORT=3000 next dev -H 0.0.0.0",
        "build": "next build && node fix_html.cjs",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "analyze": "ANALYZE=true next build",
        "electron-dev": "concurrently -k \"npm run dev\" \"npm run server\" \"wait-on http://localhost:3000 http://localhost:5000/api/health && electron .\"",
        "server": "cross-env BACKEND_PORT=5000 npx tsx backend/src/index.ts",
        "build:server": "node scripts/build-backend.cjs",
        "electron-build": "npm run build:server && npm run encrypt-env && next build && electron-builder",
        "encrypt-env": "tsx scripts/encrypt-env.ts",
        "electron": "electron ."
    },
    "dependencies": {
        "@capacitor/android": "^8.0.1",
        "@capacitor/cli": "^8.0.1",
        "@capacitor/core": "^8.0.1",
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "@headlessui/react": "^2.2.9",
        "@heroicons/react": "^2.2.0",
        "@radix-ui/react-dialog": "^1.1.15",
        "@tanstack/react-query": "^5.0.0",
        "@tanstack/react-query-devtools": "^5.0.0",
        "@vidstack/react": "^1.0.0",
        "axios": "^1.6.0",
        "bcrypt": "^6.0.0",
        "castv2-client": "^1.2.0",
        "clsx": "^2.0.0",
        "core-js": "^3.47.0",
        "cors": "^2.8.5",
        "dlnacasts": "^0.1.0",
        "dotenv": "^17.2.3",
        "electron-serve": "^1.3.0",
        "electron-store": "^11.0.2",
        "electron-updater": "^6.7.3",
        "express": "^5.2.1",
        "fluent-ffmpeg": "^2.1.3",
        "framer-motion": "^10.16.0",
        "googleapis": "^129.0.0",
        "helmet": "^8.1.0",
        "hls.js": "^1.4.0",
        "ip": "^2.0.1",
        "jsonwebtoken": "^9.0.3",
        "lucide-react": "^0.263.1",
        "mdns-js": "^1.0.3",
        "mongoose": "^8.0.0",
        "morgan": "^1.10.1",
        "next": "^14.1.0",
        "next-themes": "^0.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.43.9",
        "react-intersection-observer": "^10.0.0",
        "react-player": "^3.4.0",
        "resize-observer-polyfill": "^1.5.1",
        "systeminformation": "^5.30.3",
        "tailwind-merge": "^2.2.0",
        "tailwindcss": "^3.3.0",
        "tailwindcss-animate": "^1.0.7",
        "ts-node": "^10.9.2",
        "uuid": "^13.0.0",
        "webtorrent": "^1.9.1",
        "zod": "^3.21.4",
        "zustand": "^4.4.0"
    },
    "devDependencies": {
        "@babel/plugin-transform-class-properties": "^7.28.6",
        "@babel/plugin-transform-nullish-coalescing-operator": "^7.28.6",
        "@babel/plugin-transform-numeric-separator": "^7.28.6",
        "@babel/plugin-transform-optional-chaining": "^7.28.6",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "autoprefixer": "^10.4.0",
        "concurrently": "^8.0.0",
        "cross-env": "^7.0.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "eslint": "^8.50.0",
        "eslint-config-next": "^14.0.0",
        "jest": "^29.0.0",
        "jest-environment-jsdom": "^29.0.0",
        "png-to-ico": "^3.0.1",
        "png2icons": "^2.0.1",
        "postcss": "^8.4.0",
        "prettier": "^3.0.0",
        "tsx": "^4.21.0",
        "typescript": "^5.2.0",
        "wait-on": "^7.0.0"
    },
    "browserslist": [
        "chrome >= 55",
        "android >= 5",
        "ios >= 10"
    ]
}
