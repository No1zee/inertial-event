# NovaStream Staging Environment Configuration

# Application
NODE_ENV=staging
NEXT_PUBLIC_APP_NAME=NovaStream
NEXT_PUBLIC_APP_VERSION=0.1.1
NEXT_PUBLIC_API_URL=https://staging.novastream.app/api
NEXT_PUBLIC_WS_URL=wss://staging.novastream.app

# Backend
BACKEND_PORT=5000
BACKEND_URL=https://staging.novastream.app

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/novastream-staging
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=staging_password_123

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=staging_redis_123

# Authentication
JWT_SECRET=staging_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# External APIs
TMDB_API_KEY=your_tmdb_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Monitoring
SENTRY_DSN=your_staging_sentry_dsn_here
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging_grafana_123

# Vercel
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=novastream-staging@example.com
SMTP_PASS=staging_email_password

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/novastream-staging.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://staging.novastream.app

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=staging_session_secret_change_in_production