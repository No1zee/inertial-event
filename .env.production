# NovaStream Production Environment Configuration

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=NovaStream
NEXT_PUBLIC_APP_VERSION=0.1.1
NEXT_PUBLIC_API_URL=https://novastream.app/api
NEXT_PUBLIC_WS_URL=wss://novastream.app

# Backend
BACKEND_PORT=5000
BACKEND_URL=https://novastream.app

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/novastream
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Authentication
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# External APIs
TMDB_API_KEY=your_production_tmdb_api_key_here
YOUTUBE_API_KEY=your_production_youtube_api_key_here

# Monitoring
SENTRY_DSN=your_production_sentry_dsn_here
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Vercel
VERCEL_TOKEN=your_production_vercel_token_here
VERCEL_ORG_ID=your_production_vercel_org_id_here
VERCEL_PROJECT_ID=your_production_vercel_project_id_here

# Email (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=novastream@example.com
SMTP_PASS=CHANGE_THIS_EMAIL_PASSWORD

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/novastream.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=https://novastream.app

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION

# Content Delivery
CDN_URL=https://cdn.novastream.app
STATIC_CACHE_MAX_AGE=31536000

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/HTTPS
FORCE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/novastream.crt
SSL_KEY_PATH=/etc/ssl/private/novastream.key