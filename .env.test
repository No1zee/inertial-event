# Test Environment Variables
NODE_ENV=test

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Backend Configuration
BACKEND_PORT=5001
MONGODB_URI=mongodb://localhost:27017/novastream-test
JWT_SECRET=test-jwt-secret-key-for-testing-only

# Third-party API Keys (Test Keys)
TMDB_API_KEY=test-tmdb-key
VIDLINK_API_KEY=test-vidlink-key

# Streaming Configuration
STREAMING_TIMEOUT=5000
MAX_STREAM_QUALITY=1080p
DEFAULT_STREAM_QUALITY=720p

# Testing Configuration
TEST_TIMEOUT=30000
MOCK_APIS=true
ENABLE_TEST_LOGS=false

# Electron Configuration (Test Mode)
ELECTRON_IS_DEV=true
DISABLE_AUTO_UPDATE=true

# Browser Testing
BROWSER_HEADLESS=true
BROWSER_SLOWMO=0

# Coverage Configuration
COVERAGE_THRESHOLD=70
COVERAGE_EXCLUDE="**/*.d.ts,**/*.stories.tsx,**/node_modules/**"