{
  "name": "keygen-server",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "electron-main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "build-ui": "cd admin-dashboard && npm install && npm run build",
    "electron-dev": "concurrently \"npm run start\" \"electron .\"",
    "dist": "npm run build-ui && electron-builder"
  },
  "build": {
    "appId": "com.novastream.keygen",
    "productName": "NovaStream Keygen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!admin-dashboard/node_modules",
      "!admin-dashboard/src",
      "!admin-dashboard/public",
      "!test-flow.js"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "mongoose": "^9.1.4",
    "morgan": "^1.10.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
